<script src="{{ asset('bundles/apachecmsbackend/assets/plugins/bootstrap-colorpicker-2.5.2/dist/js/bootstrap-colorpicker.js') }}"></script>
<script type="text/javascript">
    var page=1,currentLabel;
    
    height=$(document).height()-168;
    if(height>500){
        $('#frame-id').css('height',height);
    }
    
    function beforeSuccess(response) {
        location.href = response.data.to;
    }
    function editLabel(object){
        $('.hidden').hide();
        currentLabel=object;
        if(currentLabel.attr('data-type')=='input'){
            $('.input #input').val(currentLabel.html());
        }else if(currentLabel.attr('data-type')=='textarea'){
            var value=currentLabel.html();
            var regex = /<br\s*[\/]?>/gi;
            {# $("#mydiv").html(str.replace(regex, "\n")); #}
            $('.textarea #textarea').text(value.replace(regex, ""));
        }else if(currentLabel.attr('data-type')=='link'){
            console.log(currentLabel.attr('data-href'));
            $('.link #link').val(currentLabel.attr('data-href'));
        }
        $('.'+currentLabel.attr('data-type')).show();
        $('#'+currentLabel.attr('data-type')).focus();
        $('#modalLabels').modal('show');
    }
    
    function changeScreen(src) {
        if(src=='desktop'){
            $('#frame-id').animate({width: '100%'}, 'normal');
        }else if(src=='tablet'){
            $('#frame-id').animate({width: '760px'}, 'normal');
        }else{
            $('#frame-id').animate({width: '375px'}, 'normal');
        }
    }
    function sendScroll(object){
        var goTo=$(object).attr('data-scroll');
        setUpFrame({'section':'','scroll':goTo });
    }
    function sendScrollToPixel(object){
        var goTo=$(object).attr('data-scroll');
        setUpFrame({'section':'','scroll':'null','scrollToPixel':goTo });
    }
    function sendBackground(object){
        $('#preview-backgroundImage').attr('src',$(object).attr('data-src'));
        sendScroll(object);
        $('#landing_step5_backgroundImage').val($(object).attr('data-src')).trigger('change');
    }
    function sendColor(object){
        $('#landing_step5_colorPrimary').val($(object).attr('data-color')).trigger('change');
    }
    
    function searchUnplash(page){
        var container=$('#unsplash-image-body-content');
        var title=$('#unsplash-image-body-title');
        $('#unsplash-image-paginator').hide();
        container.html('');
        title.html('{{ 'loading' | trans }}');
        $.get('https://api.unsplash.com/search/photos', { 
            client_id:'6e8628ec97c379a161751b6bec34efecf3a21e64723e3ab483f09f79b6a89a13',
            query:$('#query_unplash').val(),
            orientation: 'landscape',
            per_page: 12,
            page: page
        }, function (result) {
            $('#unsplash-image-paginator-previous').attr('disabled',(page==1));
            $('#unsplash-image-paginator-next').attr('disabled',(result.total_pages<=page));
            if(result.total > 0){
                $('#unsplash-image-paginator').show();
                title.html('{{ 'find.result' | trans }} '+result.total+' {{ 'result' | trans }}');
                for(var i=0; i<result.results.length; i++){
                    container.append(`<div class="col-sm-3" style="margin-bottom:15px; margin-top:15px; cursor:pointer;" data-scroll="page-top" onclick="sendBackground(this)" data-src='${result.results[i].urls.regular}'>
                        <div class="cover img-thumbnail" style="height:100px; background-image:url('${result.results[i].urls.small}')"></div>
                    </div>`);
                }
            }else{
                title.html('{{ 'no.results' | trans }}');
            }
        });
    }
    
    function sendColumn(object){
        var columns=$(object).val();
        setUpFrame({'section':'grid','class':columns,'scroll':'columns' });
    }
    function setUpFrame(message) { 
        var frame = window.frames['frame-id'];
        frame.messageReceive(message);
    }
    function setAndSearch(){
        page=1;
        searchUnplash(page);
    }
    function runScript(e) {
        if (e.keyCode == 13) {
            setAndSearch();
            return false;
        }
    }
    function init(){
        $('#unsplash-image-paginator-previous').on('click',function (){
            page--;
            searchUnplash(page);
        })
        $('#unsplash-image-paginator-next').on('click',function (){
            page++;
            searchUnplash(page);
        })
        setUpFrame({'section':'navBarTop','color':$('#landing_step5_navBarTop').val(),'scroll':'null' });      
        setUpFrame({'section':'navBarTopText','color':$('#landing_step5_navBarTopText').val(),'scroll':'null' });      
        setUpFrame({'section':'navBarFixed','color':$('#landing_step5_navBarFixed').val(),'scroll':'null' });      
        setUpFrame({'section':'navBarFixedText','color':$('#landing_step5_navBarFixedText').val(),'scroll':'null' });  
        setUpFrame({'section':'colorPrimary','color':$('#landing_step5_colorPrimary').val(),'scroll':'null' });  
        setUpFrame({'section':'background','src':$('#landing_step5_backgroundImage').val(),'scroll':'null' });  
        setUpFrame({'section':'brightness','val':$('#landing_step5_brightness').val(),'scroll':'null' });
    }
    function chageTemplate(template){
        loading.show();
        var timeout=setTimeout(function (){
            loading.hide();
            {# receiveMessage(result.data); #}
        }, 2000);
        let url='{{ path('apachecms_frontend_landing_preview',{ id:entity.id,'template':'__TEMPLATE__' }) }}';
        $('#frame-id').attr('src',url.replace('__TEMPLATE__',template));
    }
    $(function (){

        $('#query_unplash').val('{{ entity.business.industry.tagUnsplash }}');
        
        $('#nav-tab a').on('click', function (e) {
            e.preventDefault()
            $(this).tab('show')
            })
        $(".templates .card").hover(function ()    {
            $(this).addClass('shadow');
        },function (){
            $(this).removeClass('shadow');
        });
        $('a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
            if($(e.target).attr('id')=='unsplash-image'){
                setAndSearch();
            }
        })
        $('.colorpicker-component').colorpicker({
            extensions: [
            {
            name: 'swatches', // extension name to load
            options: { // extension options
                colors: {
                'black': '#000000',
                'gray': '#888888',
                'white': '#ffffff',
                'red': 'red',
                'default': '#777777',
                'primary': '#337ab7',
                'success': '#5cb85c',
                'info': '#5bc0de',
                'warning': '#f0ad4e',
                'danger': '#d9534f'
