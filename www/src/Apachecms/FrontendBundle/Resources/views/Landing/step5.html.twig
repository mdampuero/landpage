        );

        $('#save-labels').on('click',function(){
            
            $('#modalLabels').modal('hide');
            var value=$('.'+currentLabel.attr('data-type')+' #'+currentLabel.attr('data-type')).val();
            console.log(currentLabel);
            $('#'+currentLabel.attr('id')).val(value);
            setUpFrame({'section':'labels','value':value,'src':currentLabel,'scroll':'null' });
        });
        $('#brightness').on('change',function (){
            $('#landing_step5_brightness').val($(this).val()).trigger('change');
            {# setUpFrame({'section':'brightness','val':$(this).val(),'scroll':'null' }); #}
        });
        
        $('#counter-image').html(counterImage);
        $('#landing_step5_navBarTop').change(function (){
            setUpFrame({'section':'navBarTop','color':$(this).val(),'scroll':'null' });
        }).click(function (){
            setUpFrame({'section':'','scroll':'page-top' });
        });
        $('#landing_step5_navBarTopText').change(function (){
            setUpFrame({'section':'navBarTopText','color':$(this).val(),'scroll':'null' });
