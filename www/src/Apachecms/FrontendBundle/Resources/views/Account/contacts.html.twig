        dom: 'Bfrtip',
        ajax: "{{ path('apachecms_api_account_getContacts')}}",
        pageLength: 15,
        lengthMenu: [15, 25, 50],
        language: {
            url: '//cdn.datatables.net/plug-ins/1.10.19/i18n/Spanish.json'
        },
        buttons: [
           
        ],
