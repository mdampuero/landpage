{% extends "ApachecmsFrontendBundle::layout_lp.html.twig" %}
{% block stylesheet %} 
{{ parent() }}
<link rel="stylesheet" href="{{ asset('bundles/apachecmsbackend/leaflet/leaflet.css') }}">
<link rel="stylesheet" type="text/css" href="https://unpkg.com/leaflet.markercluster@1.3.0/dist/MarkerCluster.css" />
<link rel="stylesheet" type="text/css" href="https://unpkg.com/leaflet.markercluster@1.3.0/dist/MarkerCluster.Default.css" />
{% endblock %}
{% block body %}
{{ include('ApachecmsFrontendBundle::_partials/brand.html.twig') }}
{% block headerPage %}
{% include 'ApachecmsFrontendBundle:_partials:breadcrumbs.html.twig' with { 'title_entity': entity.title } %}
{% endblock %}
<div class="container">
    <div class="row">
        <div class="col-md-3">
            {{ include('ApachecmsFrontendBundle::Stats/_partials/menu.html.twig') }}
        </div>
        <div class="col-md-9">
            <div class="card">
                <h2 class="card-header">
                    {{ (app.request.attributes.get('_route_params')['_breadcrumbs']|last)['label'] | trans }}
                </h2>
                <div class="card-body">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div id="map" style="height:400px;"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %} 
{{ parent() }}
<script src="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.3.3/leaflet.js"></script>
<script type="text/javascript" src="https://unpkg.com/leaflet.markercluster@1.3.0/dist/leaflet.markercluster.js"></script>
<script>    
    var markers = L.markerClusterGroup();
    var points, layers=[], insidePoints = [];
    var geoJsonLayer;
    var map = L.map('map').setView([-34.63049, -58.4667247],5),
        drawnItems = new L.FeatureGroup().addTo(map);
    L.tileLayer(
        'https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors, <a href="https://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>, Imagery Â© <a href="https://www.mapbox.com/">Mapbox</a>',
            maxZoom: 18,
            id: 'mapbox.streets',
            accessToken: 'pk.eyJ1IjoiaW5hbWlrYSIsImEiOiJjams5c2x2dmEwZXFpM2x0NGxrOHAxc2FsIn0.CMTOZk_UmJQVRlqr7lxWRA'
        }).addTo(map);
    function renderMap() {
        points=[]; 
        layers.map(function (layer){
            layer.remove();
        });
        $.ajax({
            type: "POST",
            url: "{{ path('apachecms_api_stats_marker',{ id: entity.id }) }}",
            dataType: 'json',
            data: null,
            success: function (response) {
                markers.clearLayers();
                if(response.features){
                    geoJsonLayer = new L.GeoJSON(response, {
                        onEachFeature: function (feature, layer) {
                            points.push(feature);
                            layers.push(layer);
                            {# if (!feature.properties.ultimoContacto) {
                                layer.bindPopup('<h4>' + feature.properties.nombre + ' ' + feature.properties.apellido +
                                    '</h4><p></p>').openPopup();
                            } else {
                                layer.bindPopup('<h4>' + feature.properties.nombre + ' ' + feature.properties.apellido +
                                    '</h4><p>' + feature.properties.ultimoContacto + '</p>').openPopup();
                            } #}
                        }
                    });
                    markers.addLayer(geoJsonLayer);
                    map.addLayer(markers);
                    map.fitBounds(geoJsonLayer.getBounds());
                }
            }
        });
    }
    
    $(function (){
        renderMap();  
    });
</script>
{% endblock %}