{% extends "ApachecmsFrontendBundle::layout_lp.html.twig" %}
{% block body %}
{{ include('ApachecmsFrontendBundle::_partials/brand.html.twig') }}
<div class="container" id="login">
    <div class="text-center">
        <h1 class='login'>{{ 'reset.password' | trans }}</h1>
        <h5 class='login'>{{ 'hello' | trans }} {{ entity.firstName }}</h5>
    </div>
    <div class="row">
        <div class="col-sm-2">
        </div>
        <div class="col-sm-8">
            <div class="row">
                <div class="col-sm-8 offset-sm-2" style="padding: 40px 20px;">
                    {{ form_start(form, {'attr': {'id':'loginform','novalidate':'novalidate','class':'sendToApi'} }) }}
                    <div class="form-group">
                        {{form_widget(form.plainPassword.first)}}
                        <small class="text-danger error">{{ form_errors(form.plainPassword.first)}}</small>
                    </div>
                    <div class="form-group">
                        {{form_widget(form.plainPassword.second)}}
                        <small class="text-danger error">{{ form_errors(form.plainPassword.second)}}</small>
                    </div>
                    <div class="form-group text-center">
                        <div class="col-xs-12">
                            {{form_widget(form.submit,{ 'attr':{ 'class':'btn btn-info','secondary-label':'loading' | trans}})}}
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock body %}
{% block javascripts %} 
{{ parent() }}
<script type="text/javascript">
    function beforeSuccess(data){
        location.href='{{ path('security_login_frontend')}}';
    }
    </script>
{% endblock javascripts %}