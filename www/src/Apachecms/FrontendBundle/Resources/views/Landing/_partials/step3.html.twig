<h5><b>{{ 'how.contact' | trans }}</b></h5>
<hr>
<div class="row">
    <div class="form-group col-sm-6">
        {{form_label(form.contactEmail)}} {{form_widget(form.contactEmail)}}
        <small class="form-text text-danger">{{ form_errors(form.contactEmail)}}</small>
    </div>
    <div class="form-group col-sm-12">
        {{form_label(form.contactReplyEmail)}} {{form_widget(form.contactReplyEmail)}}
        <small class="form-text text-danger">{{ form_errors(form.contactReplyEmail)}}</small>
    </div>
</div>
<div class="row">
    <div class="form-group col-sm-6">
        {{form_label(form.contactPhone)}} {{form_widget(form.contactPhone)}}
        <small class="form-text text-danger">{{ form_errors(form.contactPhone)}}</small>
    </div>
</div>
<div class="row">
    <div class="form-group col-sm-6">
        <label class="text-center">{{ 'use.whatsapp' | trans }}</label><br />
        <span class="switch">
            {{form_widget(form.useWhatsapp)}}
            {{form_label(form.useWhatsapp)}}
        </span>
    </div>
    <div class="form-group col-sm-6">
        <label class="text-center">{{ 'useWhatsappMobile' | trans }}</label><br />
        <span class="switch">
            {{form_widget(form.useWhatsappMobile)}}
            {{form_label(form.useWhatsappMobile)}}
        </span>
    </div>
    <div class="form-group col-sm-12">
        {{form_label(form.contactAddress)}} {{form_widget(form.contactAddress)}}
        <small class="form-text text-danger">{{ form_errors(form.contactAddress)}}</small>
    </div>
</div>
<h5><b>{{ 'use.map' | trans }}</b>
    <div class="form-group pull-right">
        <span class="switch">
            {{form_widget(form.contactAddressMap)}}
            {{form_label(form.contactAddressMap)}}
        </span>
    </div>
</h5>
<hr>
<input id="pac-input" style="{% if not entity.contactAddressMap %}display:none;{% endif %}" class="controls form-control"
    autocomplete="new-password" type="text" placeholder="DirecciÃ³n para el marcador...">
<div id="map" style="height:400px;{% if not entity.contactAddressMap %}display:none;{% endif %}"></div>
<br />
