{% extends "ApachecmsFrontendBundle::layout_lp.html.twig" %}
{% block body %}
{{ include('ApachecmsFrontendBundle::_partials/brand.html.twig') }}
{% block headerPage %}
{% endblock %}
<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card card-danger">
                <h2 class="card-header bg-danger text-white text-center">
                    {{ 'lock.account' | trans }}
                </h2>
                <div class="card-body text-center">
                    {% if app.user.lockedType == 'other' %}
                    <h4>{{ app.user.lockedDescription | nl2br }}</h4>
                    {% elseif app.user.lockedType == 'not_validate'%}
                    <h4>{{ app.user.lockedDescription | trans }}</h4>
                    <a role="button" class="btn btn-info" href="javascript:resendValidateEmail()">{{ 'resend.email' | trans }}</a>
                    {% elseif app.user.lockedType == 'trial_expiret'%}
                    <h4>{{ app.user.lockedDescription | trans }}</h4>
                    <a role="button" href="{{ path('apachecms_frontend_pay',{ plan: app.user.plan.id, back:'renew'})}}" class="btn btn-info btn-block">{{ 'renew' | trans }} plan</a>
                    {% endif %}
                    <hr>
                    <div class="text-left">
                        <h3>{{ 'need.help' | trans }}</h3>
                        <div class="form-group">
                            <textarea class="form-control" id="query" style="height:150px;" placeholder="Indica de que manera podemos ayudarte"></textarea>
                        </div>
                        <button class="btn btn-info needHelp" type="button">{{ 'send.help' | trans }}</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %} 
{{ parent() }}
<script>
    $(function () {
        $('button.needHelp').on('click',function(){
            if($('#query').val()){
                loading.show();
                $.post('{{ path('apachecms_api_account_needHelp')}}', { query:$('#query').val()} , function (result) {
                    $('#query').val('');
                    loading.hide();
                    if (result.response == true) {
                        $.toast({
                            heading: '{{ 'help.success.title' | trans }}',
                            text: '{{ 'help.success.description' | trans }}',
                            position: 'top-right',
                            icon: 'success',
                            hideAfter: 6000, 
                            stack: 6
                        });
                    }else{
                        loading.hide();
                        $.toast({
                            heading: '{{ messages.result.error.title }}',
                            text: '{{ messages.result.error.text }}',
                            position: 'top-right',
                            icon: '{{ messages.result.error.icon }}',
                            hideAfter: 2000, 
                            stack: 6
                        });
                    }
                });
            }
        });
    });
</script>
{% endblock %}