{% extends "ApachecmsFrontendBundle::layout_lp.html.twig" %}
{% block stylesheet %} 
{{ parent() }}
<link rel="stylesheet" href="{{ asset('bundles/apachecmsbackend/leaflet/leaflet.css') }}">
{% endblock %}
{% block body %}
{% set entity = query.landingId %}
{{ include('ApachecmsFrontendBundle::_partials/brand.html.twig') }}
{% block headerPage %}
{% include 'ApachecmsFrontendBundle:_partials:breadcrumbs.html.twig' with { 'title_entity': entity.title } %}
{% endblock %}
<div class="container">
    <div class="row">
        <div class="col-md-3">
            {{ include('ApachecmsFrontendBundle::Stats/_partials/menu.html.twig') }}
        </div>
        <div class="col-md-9">
            <div class="card">
                <h2 class="card-header">
                    {{ 'chats' | trans }}
                </h2>
                
                <div class="card-body">
                <div class="text-right">
                    <p class="mb-0">Bot</p>
                    <small class="blockquote-footer">{{ entity.chatbot.welcome | raw }}<br/>{{ entity.createdAt | date('d/m/Y H:i') }}</small>
                </div>
                <hr>
                {% for reply in statMessages %}
                    <div class="{% if reply.userFrom == 'Bot' %}text-right{% else %}text-left{% endif %}">
                        {% if reply.userFrom == 'Bot' %}
                        <p class="mb-0">{{ reply.userFrom }}</p>
                        {% else %}
                        <p class="mb-0">Usuario</p>
                        {% endif %}
                        <small class="blockquote-footer">{{ reply.message | raw }}<br/>{{ reply.createdAt | date('d/m/Y H:i') }}</small>
                    </div>
                    <hr>
                {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %} 
{{ parent() }}
<script>
    function beforeSuccess(response){
        location.reload();
    }
</script>
{% endblock %}