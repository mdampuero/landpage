<h5><b>{{ 'general.data' | trans }}</b></h5>
<hr>
<div class="row">
    <div class="form-group col-sm-6">
        {{form_label(form.name)}} {{form_widget(form.name)}}
        <small class="form-text text-danger">{{ form_errors(form.name)}}</small>
    </div>
    <div class="form-group col-sm-6">
        {{form_label(form.industry)}} {{form_widget(form.industry)}}
        <small class="form-text text-danger">{{ form_errors(form.industry)}}</small>
    </div>
</div>
<div class="row">
    <div class="form-group col-sm-6">
        {{form_label(form.brand)}}
        {% if entity is defined and entity.brand %}
        {{form_widget(form.brand,{ attr: { 'data-default-file': web_image('uploads/or/' ~
        entity.brand).resize('600','300') }})}}
        {% else %}
        {{form_widget(form.brand)}}
        {% endif %}
        <small class="form-text text-danger">{{ form_errors(form.brand)}}</small>
    </div>
</div>
