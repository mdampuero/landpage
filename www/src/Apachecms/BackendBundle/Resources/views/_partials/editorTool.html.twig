<div class="btn-toolbar" data-role="editor-toolbar" data-target="#editor_{{ id }}">
    {# <div class="btn-group" >
        <a class="btn dropdown-toggle" data-toggle="dropdown" title="Tipografía"><i class="icon-font"></i><b class="caret"></b></a>
        <ul class="dropdown-menu">
        </ul>
    </div> #}
    <div class="btn-group" >
        <a class="btn dropdown-toggle" data-toggle="dropdown" title="Tamaño de letra"><i class="icon-text-height"></i>&nbsp;<b class="caret"></b></a>
        <ul class="dropdown-menu">
            <li>
                <a data-edit="fontSize 5">
                    <font size="5">Grande</font>
                </a>
            </li>
            <li>
                <a data-edit="fontSize 3">
                    <font size="3">Normal</font>
                </a>
            </li>
            <li>
                <a data-edit="fontSize 1">
                    <font size="1">Pequeño</font>
                </a>
            </li>
        </ul>
    </div>
    <div class="btn-group">
        <a class="btn" data-edit="bold" title="Negrita"><i class="icon-bold"></i></a>
        <a class="btn" data-edit="italic" title="Cursiva"><i class="icon-italic"></i></a>
        <a class="btn" data-edit="strikethrough" title="Tachado"><i class="icon-strikethrough"></i></a>
        <a class="btn" data-edit="underline" title="Subrayado"><i class="icon-underline"></i></a>
    </div>
    <div class="btn-group">
        <a class="btn" data-edit="insertunorderedlist" title="Viñeta"><i class="icon-list-ul"></i></a>
        <a class="btn" data-edit="insertorderedlist" title="Viñeta numérica"><i class="icon-list-ol"></i></a>
        <a class="btn" data-edit="outdent" title="Reducir sangría"><i class="icon-indent-left"></i></a>
        <a class="btn" data-edit="indent" title="Aumentar sangría"><i class="icon-indent-right"></i></a>
    </div>
    <div class="btn-group">
        <a class="btn" data-edit="justifyleft" title="Izquierda"><i class="icon-align-left"></i></a>
        <a class="btn" data-edit="justifycenter" title="Centro"><i class="icon-align-center"></i></a>
        <a class="btn" data-edit="justifyright" title="Derecha"><i class="icon-align-right"></i></a>
        <a class="btn" data-edit="justifyfull" title="Justificado"><i class="icon-align-justify"></i></a>
    </div>
    <div class="btn-group">
        <a class="btn dropdown-toggle" data-toggle="dropdown" title="Link"><i class="icon-link"></i></a>
        <div class="dropdown-menu input-append">
            <input class="span2" placeholder="URL" type="text" data-edit="createLink" />
            <button class="btn" type="button">Añadir</button>
        </div>
        <a class="btn" data-edit="unlink" title="Eliminar link"><i class="icon-cut"></i></a>

    </div>

    <div class="btn-group">
        <a class="btn" title="Insertar image o arrastre y suelte" id="pictureBtn{{ id }}"><i class="icon-picture"></i></a>
        <input type="file" data-role="magic-overlay" data-target="#pictureBtn{{ id }}" data-edit="insertImage" />
    </div>
    <div class="btn-group">
        <a class="btn" data-edit="undo" title="Deshacer"><i class="icon-undo"></i></a>
        <a class="btn" data-edit="redo" title="Rehacer"><i class="icon-repeat"></i></a>
    </div>
    <input type="text" data-edit="inserttext" id="voiceBtn" x-webkit-speech="">
</div>
<div id="editor_{{ id }}" class="container-editor"></div>