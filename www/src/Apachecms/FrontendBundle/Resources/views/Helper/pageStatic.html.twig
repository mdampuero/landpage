<div class="modal fade" data-backdrop="static" data-keyboard="false"  id="modal{{ entity.code | capitalize }}" tabindex="-1" role="dialog" aria-labelledby="modal{{ entity.code | capitalize }}Label" aria-hidden="true">
    <div class="modal-dialog modal-lg " role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h5 class="modal-title text-center" id="modal{{ entity.code | capitalize }}Label"><b>{{ attribute(entity, 'name'~(app.request.locale | capitalize )) }}</b></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    {{ attribute(entity, 'description'~(app.request.locale | capitalize )) | raw }}
                </div>
            </div>
            <div class="modal-footer text-center">
                <button type="button" class="btn btn-primary" data-dismiss="modal">{{ 'accept' | trans }}</button>
            </div>
        </div>
    </div>
</div>
<script>
    function openModal{{ entity.code | capitalize }}(){
        $('#modal{{ entity.code | capitalize }}').modal('show');
    }
</script>